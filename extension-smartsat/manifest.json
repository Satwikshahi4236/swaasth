{
  "manifest_version": 3,
  "name": "SMARTSAT Side Panel",
  "description": "A side panel Chrome extension to chat with the SMARTSAT assistant with history and speech-to-text.",
  "version": "0.1.0",
  "action": {
    "default_title": "Open SMARTSAT"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html"
}
